<div class="max-w-wide mx-auto">
    <div class="flex flex-col {% if data.imagePosition == 'right' %}md:flex-row{% else %}md:flex-row-reverse{% endif %} gap-8">
        <div class="w-full md:w-1/2">
            {% if data.image %}
            <img 
                src="{{ data.image }}" 
                alt="{{ data.imageAlt or 'Featured image' }}" 
                class="w-full h-auto object-cover aspect-[4/3]"
            >
            {% endif %}
        </div>
        <div class="w-full md:w-1/2 flex flex-col justify-center">
            {% if data.title %}
            <h2 class="text-2xl font-semibold mb-4">{{ data.title }}</h2>
            {% endif %}
            {% if data.text %}
            <div class="prose prose-invert">
                {{ data.text | safe }}
            </div>
            {% endif %}
            {% if data.buttonText and data.buttonUrl %}
            <a 
                href="{{ data.buttonUrl }}" 
                class="inline-flex items-center mt-6 px-6 py-3 border border-transparent text-base font-medium text-white bg-blue-600 hover:bg-blue-700 transition-colors"
            >
                {{ data.buttonText }}
            </a>
            {% endif %}
        </div>
    </div>
</div>