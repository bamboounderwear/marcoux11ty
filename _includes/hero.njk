<div class="relative h-[70vh] flex items-end overflow-hidden pb-16">
    {% if featuredImage %}
    <div class="absolute inset-0">
        <img src="{{ featuredImage }}" alt="{{ title }}" class="w-full h-full object-cover">
        <div class="absolute inset-0 bg-gradient-to-b from-black/40 via-black/60 to-black"></div>
    </div>
    {% endif %}
    <div class="relative z-10 w-full">
        <div class="container mx-auto px-4">
            <div class="max-w-content mx-auto text-center">
                {% if title %}
                <h1 class="text-white mb-4">{{ title }}</h1>
                {% endif %}
                {% if subtitle %}
                <p class="text-xl text-white/80">{{ subtitle }}</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
