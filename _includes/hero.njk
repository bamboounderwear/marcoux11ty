<div class="relative h-[70vh] flex items-center justify-center overflow-hidden">
    {% if featuredImage %}
    <div class="absolute inset-0">
        <img src="{{ featuredImage }}" alt="{{ title }}" class="w-full h-full object-cover">
        <div class="absolute inset-0 bg-black bg-opacity-40"></div>
    </div>
    {% endif %}
    <div class="relative z-10 container mx-auto px-4 text-center">
        {% if title %}
        <h1 class="text-white mb-4">{{ title }}</h1>
        {% endif %}
        {% if subtitle %}
        <p class="text-xl text-white/80 max-w-2xl mx-auto">{{ subtitle }}</p>
        {% endif %}
    </div>
</div>